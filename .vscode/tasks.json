{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-magneto",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/Magneto/src/Magneto/Magneto.csproj",
                "--configuration",
                "Debug",
                "--verbosity",
                "quiet"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "install-professorx",
            "command": "npm",
            "type": "process",
            "args": [
                "install"
            ],
            "options": {
                "cwd": "${workspaceFolder}/ProfessorX"
            },
            "problemMatcher": [],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "start-professorx",
            "command": "npm",
            "type": "process",
            "args": [
                "start"
            ],
            "options": {
                "cwd": "${workspaceFolder}/ProfessorX"
            },
            "problemMatcher": [],
            "group": "build",
            "isBackground": true
        }
    ]
}